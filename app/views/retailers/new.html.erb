<!-- Validation failure messages -->

<% if @retailer.errors.any? %>
  <% @retailer.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<!-- Responsive panel example -->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Add Retailer</h3>
      </div>
      <div class="panel-body">
        <form action="/create_retailer" method="post" class="form-horizontal">
          <!-- Hidden input for authenticity token to protect from forgery -->
          <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

          <!-- Label and input for retailer -->
          <div class="form-group">
            <label for="retailer" class="col-sm-2 control-label">
              Retailer
            </label>
            <div class="col-sm-10">
              <input type="text" id="retailer" name="retailer" placeholder="Retailer" class="form-control" value="<%= @retailer.retailer %>">
            </div>
          </div>

          <!-- Label and input for url -->
          <div class="form-group">
            <label for="url" class="col-sm-2 control-label">
              Url
            </label>
            <div class="col-sm-10">
              <input type="text" id="url" name="url" placeholder="Url" class="form-control" value="<%= @retailer.url %>">
            </div>
          </div>

          <!-- Label and input for description -->
          <div class="form-group">
            <label for="description" class="col-sm-2 control-label">
              Description
            </label>
            <div class="col-sm-10">
              <input type="text" id="description" name="description" placeholder="Description" class="form-control" value="<%= @retailer.description %>">
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <button class="btn btn-success">
                Create Retailer
              </button>
              or
              <a href="/retailers">Cancel</a>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<!-- End responsive panel example -->
